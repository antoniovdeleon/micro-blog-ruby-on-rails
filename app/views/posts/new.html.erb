<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<h1>Add A Post</h1>
			<br>
		</div>
	</div>
	<form class="form-horizontal" role="form" method="post" action="/posts">
		  <%= token_tag form_authenticity_token %>
	    <div class="form-group">
	        <label for="post[subject]" class="col-sm-2 control-label">Subject</label>
	        <div class="col-sm-8">
	            <input type="text" class="form-control" name="post[subject]" placeholder="Enter a subject for your post">
	        </div>
	    </div>
	    <div class="form-group">
	        <label for="post[text]" class="col-sm-2 control-label">Text</label>
	        <div class="col-sm-8">
	            <textarea class="form-control" rows="4" name="post[text]" placeholder="Enter your blog post here"></textarea>
	        </div>
	    </div>
	    <div class="form-group">
	        <div class="col-sm-10 col-sm-offset-2">
	            <input type="submit" value="Add Post" class="btn btn-primary">
	        </div>
	    </div>
	</form>
</div>

<%= form_for @post do |f| %>
  <%= f.label :subject %>:
  <%= f.text_field :subject %><br />

  <%= f.label :text %>:
  <%= f.text_area :text %><br />

  <%= f.submit %>
<% end %>