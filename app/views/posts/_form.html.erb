
<div class="container" id="container_form">
 <%= form_for @post, :html => {:class => "form-horizontal center"} do |f| %>
	<div class="form-group">
		<%= f.label :subject, "Subject:", class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
	    <%= f.text_field :subject, class: "form-control", placeholder: "Enter the subject of your post" %>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.label :text, "Blog Post:", class: "col-sm-2 control-label" %>
	  <div class="col-sm-8">
	    <%= f.text_area :text, class: "form-control", placeholder: "Enter your blog post here"%>
	  </div>
	</div>
			<%= f.submit "Submit Post", class: "btn btn-primary pull-right", id: "submit-button" %>  
 		<% end %>
	</div>
</div>